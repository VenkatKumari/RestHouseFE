    <item android:bottom="1dp" >
        <shape
            android:shape="rectangle">
            <!--&lt;!&ndash; Set the background color of your layout here &ndash;&gt;-->
            <stroke android:width="1dp" android:color="#000000" />
            <solid android:color="#000000" />
        </shape>
    </item>

    <item android:bottom="1dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" >
            <stroke
                android:width="0.5dp"
                android:color="@android:color/black" />

            <solid android:color="#ffffff"/>
            <corners android:radius="8dp"/>
            <padding android:left="8dp"
                android:bottom="8dp"
                android:right="8dp"
                android:top="8dp"/>
        </shape>
    </item>

    <shape>
        <solid android:color="#ffffff"/>
        <corners android:radius="8dp"/>
        <padding android:left="8dp"
            android:bottom="8dp"
            android:right="8dp"
            android:top="8dp"/>
    </shape>

